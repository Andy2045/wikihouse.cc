<% content_for :header do %>
  <div class="container">      <div class="top-description">
  <h1>
    <%= link_to "Library", library_categories_path %>
    / <%= link_to params[:library_category_id].capitalize, library_category_things_path(library_category_id: params[:library_category_id]) %>
    <% if params[:id] %>
    / <%= params[:id].humanize.titleize %>
    <% end %>
  </h1></div></div>
<% end %>

<% @repos.each do |repo| %>
  <%= link_to [request.path, repo.name].join('/'), class: 'big-type-link' do %>
  <div class="flex">
    <div class="half">
      <div class="container">
        <%= image_tag repo.img %>
      </div>
    </div>
    <div class="half type-description">
      <div class="container">
        <h2><%= repo.name %></h2>
        <%= simple_format(repo.data['info']['description']) %>
      </div>
    </div>
  </div>
  <% end %>
<% end %>

<%= link_to enquiry_path(id: 'submitting-a-new-library-solution'), class: 'big-type-link new-type' do %>
  <div class="flex">
    <div class="half">
      <div class="container plus-holder">
        <span class="plus">+</span>
      </div>
    </div>
    <div class="half type-description">
      <div class="container">
        <span>Submit a new type to this library</span>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <ul id="types-links">
    <li><%= link_to "Can't see the type you need? To commission a new design, get in touch <strong>here</strong>".html_safe, "#" %></li>
  </ul>
</div>
