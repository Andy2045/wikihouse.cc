<div id="homepage-slider" class="main-slider-holder swiper-container main-slider-container">
  <div class="swiper-wrapper">
    <% @home_page.sliders.each do |slider| -%>
      <div class="<%= slider.class_name %> swiper-slide" style="<%= slider.style %>">
        <div class="s-container">
          <div class="slide-content">
            <span class="typed"><%= slider.formatted_title %></span>
            <p><%= slider.caption %></p>
          </div>
          <%= link_to slider.link_text, slider.link_url, class: "bottom-link #{slider.class_name}" %>
        </div>
      </div>
    <% end -%>
  </div>
</div>

<div style="background: #F0F0F0"><%= render "application/slider" %></div>
<%= render "application/microhouse_render" %>
<%= render "application/propose_and_counts" %>

<div id="media-links">
  <ul id="press-logos">
    <% if cms_content? %>

    <% @home_page.press_articles.each do |article| -%>
      <li><%= link_to image_tag(article.image_url, alt: article.title), article.link %></li>
    <% end -%>

    <% else %>

    <li><%= link_to image_tag("press/BBC-01.svg").html_safe, "http://www.bbc.co.uk/news/technology-35697552" %></li>
    <li><%= link_to image_tag("press/Forbes-01.svg").html_safe, "http://www.forbes.com/sites/haydnshaughnessy/2012/05/05/the-house-you-download-to-your-desktop/#337bae756e17" %></li>
    <li><%= link_to image_tag("press/TED-01.svg").html_safe, "http://blog.ted.com/wikihouses-alastair-parvin-on-the-bright-potential-of-community-led-development/" %></li>
    <li><%= link_to image_tag("press/The Guardian-01.svg").html_safe, "https://www.theguardian.com/sustainable-business/2014/sep/23/build-own-sustainable-eco-house-wikihouse" %></li>
    <li><%= link_to image_tag("press/The Independent.svg").html_safe, "http://www.independent.co.uk/voices/comment/wikihouse-40-is-a-sign-that-we-have-entered-the-third-industrial-revolution-9784305.html" %></li>
    <li><%= link_to image_tag("press/Wired-01.svg").html_safe, "http://www.wired.co.uk/topic/wikihouse" %></li>

    <% end %>
  </ul>
</div>

