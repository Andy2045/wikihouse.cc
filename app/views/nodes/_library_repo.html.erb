<div class="type-details">
  <div class="container">
    <div class="left-info">
      <%= markdown(image_sub(repo.readme.to_s)) %>
    </div>
    <div class="right-info">
      <div class="download-buttons">
        <%= link_to '<i class="material-icons">file_download</i> Download'.html_safe, repo.archive_url, class: 'download button' %>
        <%= link_to fa_icon("github", text: "Fork on github").html_safe, repo.url, class: 'button' %>
      </div>

      <div class="side-item hosts">
        <h5>Hosts</h5>
        <ul>
          <li>
            <%= github_user "claytonprest" %>
          </li>
        </ul>
        <hr/>
      </div>

      <div class="side-item contributors">
        <h5>Contributors</h5>
        <ul id="contributors">
          <li><%= link_to "claytonprest", "https://www.github.com/claytonprest" %></li>
          <li><%= link_to "Alastairparvin", "https://www.github.com/Alastairparvin" %></li>
        </ul>
      </div>

      <p><strong>Forks</strong><%= link_to repo.data['forks'], "https://github.com/#{repo.name}/#{repo.owner}/network", class: 'data' %></p>

      <% if repo.data['updated_at'] %>
        <p><strong>Latest Update</strong><span class="data"><%= Time.parse(repo.data['updated_at']).strftime("%d %b, %Y") %></span></p>
      <% end %>

      <hr/>

      <h5>Files</h5>
      <ul id="files-list">
        <% repo.files.each do |file| %>
          <li>
            <%= render "application/file", filename: file['name'], datetime: file['updated_at'], url: repo.url %>
          </li>
        <% end %>
      </ul>

      <%= link_to repo.issues_url do %>
      <ul id="action-buttons">
        <li id="exclamation-icon"><%= image_tag("icons/exclamation.svg") %></li>
        <li id="fork-text">Report an Issue</li>
      </ul>
      <% end %>

      <hr/>
      <h5>License</h5>
      <p>This work is licensed under the <%= link_to license.name, license.url %></p>
    </div>
  </div>
</div>
