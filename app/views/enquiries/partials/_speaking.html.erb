<h3>Event Details</h3>

<%= f.input :organisation, label: "Event Name", as: :string, required: true %>

<%= f.input :event_start_date, as: :date %>
<%= f.input :event_end_date, as: :date, include_blank: true %>

<%= f.input :requested_speaker, wrapper: :default %>
<%= f.input :about_event, as: :text, wrapper: :default %>
<%= f.input :expenses, as: :boolean, label: "Expenses included?", wrapper: :default %>
<%= f.input :speaking_fee, as: :string, required: true %>
<%= f.input :message, as: :text, wrapper: :default %>

<div class="thanks">
  <div class="container">
    <h1>Thank you.</h1>
    <p>Message received, thank you. One of the team will get in contact with you as soon as possible.</p>
  </div>
</div>
