<h3>Event Details</h3>

<%= f.input :organisation, label: "Event Name", as: :string, required: true %>
<%= f.input :role, required: true, label: "Your Role" %>

<%= f.input :event_start_date, as: :date, wrapper: :default, start_year: Date.today.year, end_year: Date.today.year + 4, include_blank: true, input_html: { class: 'mdc-select mdc-dark' } %>
<%= f.input :event_end_date, as: :date, include_blank: true, wrapper: :default, start_year: Date.today.year, end_year: Date.today.year + 4, input_html: { class: 'mdc-select mdc-dark' } %>

<%= f.input :about_event, as: :text, wrapper: :default, label: "About the event" %>

<%= f.input :requested_speaker, wrapper: :default, collection:[
    ["Alastair Parvin (Co-Founder)", "alastair_parvin"],
    ["Harry Knight (Community Host)", "harry_knight"],
    ["Clayton Prest (R&D Lead)", "clayton_prest"],
    ["John Rees (Lead Developer)", "john_rees"],
    ["Justyna Swat (Connector)", "justyna_swat"]
  ], input_html: { class: 'mdc-select mdc-dark' } %>

<%= f.input :speaking_fee, as: :boolean, wrapper: :default, label: "Speaking fee?".html_safe %>
<%= f.input :expenses, as: :boolean, label: "Expenses included?".html_safe, wrapper: :default %>

<%= f.input :message, as: :text, wrapper: :default %>

<div class="thanks" id="thank-you">
  <div class="container">
    <h1>Thank you.</h1>
    <p>Message received, thank you. One of the team will get in contact with you as soon as possible.</p>
  </div>
</div>
